<div class="mt-5">
  <h3>Đăng khóa học</h3>

  <form class="row g-3" method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" id="inputName" placeholder="Name">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" name="description" id="inputDescription" placeholder="Description">
    </div>

    <div class="form-group">
      <label for="videoId">VideoID</label>
      <input type="text" class="form-control" name="videoId" id="inputVideoId" placeholder="VideoId">
    </div>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-3">Confirm</button>
    </div>
</form>
</div>